<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TableManager.App.Views.MainView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,40">
            <TextBlock Text="TableManager" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="#065F46"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Головна сторінка" 
                       FontSize="24" 
                       Foreground="#047857"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="40,0,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0">
                
                <Button Content="Відкрити файл"
                        Width="480"
                        Height="60"
                        Background="#047857"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Margin="0,0,0,30"
                        Click="OpenFile_Click">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#047857"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <Button Content="Створити нову таблицю"
                        Width="480"
                        Height="60"
                        Background="#047857"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Margin="0,0,0,20"
                        Click="CreateTable_Click">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#047857"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <Button Content="Довідка"
                        Width="480"
                        Height="60"
                        Background="#047857"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Click="Help_Click">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#047857"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>

            <Border Grid.Column="1" 
                    Background="#f3f4f6" 
                    CornerRadius="10"
                    BorderBrush="#d1d5db"
                    BorderThickness="1"
                    Padding="20"
                    Margin="20,0,0,0">
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                  Text="Нещодавно відкриті файли" 
                                  FontSize="20" 
                                  Foreground="#1f2937"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Content="Очистити"
                                Background="#ba1e1eff"
                                Foreground="White"
                                Padding="10,5"
                                Click="ClearRecent_Click">
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="#dc2626"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </Grid>
                    
                    <ListBox x:Name="RecentFilesList"
                            Background="Transparent"
                            MinHeight="300"
                            SelectionChanged="RecentFile_Selected">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                       BorderBrush="#d1d5db"
                                       BorderThickness="1"
                                       CornerRadius="5"
                                       Padding="15,10"
                                       Margin="0,5">
                                    <TextBlock Text="{Binding}" 
                                              Foreground="#1f2937"
                                              FontSize="16"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>